<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="mainViewModel"
            type="com.gram.cmr.ViewModel.MainViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#648CBA">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/round_white">
            <FrameLayout
                android:id="@+id/drawlayout"
                android:background="@drawable/round_white"
                android:elevation="10dp"
                android:layout_width="330dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/info_layout"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp">
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/round_white"
                android:elevation="10dp"
                android:id="@+id/info_layout"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/round_layout"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:padding="3dp">
                    <TextView
                        android:id="@+id/round"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ROUND 3"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#648CBA"
                        android:fontFamily="@font/nanumsquarebold"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/round_layout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/otherscore_layout"
                    android:id="@+id/myscore_layout"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:padding="5dp">
                    <ImageView
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/score"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/myscore"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="20"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#648CBA"
                        android:fontFamily="@font/nanumsquarebold"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    app:layout_constraintLeft_toRightOf="@id/myscore_layout"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/round_layout"
                    android:id="@+id/otherscore_layout"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:padding="5dp">
                    <ImageView
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/score"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/otherscore"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:text="20"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#648CBA"
                        android:fontFamily="@font/nanumsquarebold"
                        android:gravity="center"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/myscore_layout"
                    android:id="@+id/palette_layout"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_white"
                    android:elevation="10dp"
                    android:paddingHorizontal="3dp"
                    android:paddingVertical="15dp">
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/red_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorRed"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorRed)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/red_color"
                        android:id="@+id/pink_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorPink"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorPink)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/pink_color"
                        android:id="@+id/orange_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorOrange"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorOrange)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/orange_color"
                        android:id="@+id/yellow_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorYellow"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorYellow)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/yellow_green_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorYellowGreen"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorYellowGreen)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toRightOf="@id/red_color"
                        android:id="@+id/green_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorGreen"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorGreen)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toRightOf="@id/pink_color"
                        android:id="@+id/sky_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorSky"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorSky)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/red_color"
                        app:layout_constraintLeft_toRightOf="@id/orange_color"
                        android:id="@+id/light_purple_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorLightPurple"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorLightPurple)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/purple_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorPurple"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorPurple)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toRightOf="@id/red_color"
                        android:id="@+id/amethyst_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorAmethyst"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorAmethyst)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toRightOf="@id/pink_color"
                        android:id="@+id/gray_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorGray"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorGray)}">
                    </com.gram.cmr.Util.RoundView>
                    <com.gram.cmr.Util.RoundView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="15dp"
                        app:layout_constraintTop_toBottomOf="@id/yellow_green_color"
                        app:layout_constraintLeft_toRightOf="@id/orange_color"
                        android:id="@+id/black_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:setBackgroundColor="@color/colorBlack"
                        android:onClick="@{()->mainViewModel.ColorClick(@color/colorBlack)}">
                    </com.gram.cmr.Util.RoundView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/timer_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:elevation="10dp"
            android:padding="10dp">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/timer"/>
            <TextView
                android:id="@+id/timer"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="1:30"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#648CBA"
                android:fontFamily="@font/nanumsquarebold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/word_layout"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_word_blue"
            android:elevation="10dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="개구리"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/nanumsquarebold"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <Button
            android:fontFamily="@font/nanumsquarebold"
            android:textSize="18dp"
            android:text="지우개"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:elevation="10dp"
            android:id="@+id/eraser"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="@drawable/round_white"
            android:onClick="@{()->mainViewModel.EraserClick}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>